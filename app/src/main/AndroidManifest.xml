<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.davilo.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DaviloApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher2_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="org.davilo.app.ui.activity.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.davilo.app.ui.activity.register.RegisterActivity"
            android:label="@string/action_register"
            android:theme="@style/AppThemeLoginRegister" />
        <activity
            android:name="org.davilo.app.ui.activity.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppThemeLoginRegister" />
        <activity
            android:name="org.davilo.app.ui.activity.WebAppActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" />
        <activity
            android:name="org.davilo.app.ui.activity.IntroActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNoActionBar" />
    </application>

</manifest>